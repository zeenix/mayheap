{
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "commitMessageAction": "⬆️  Update"
    },
    {
      "matchManagers": [
        "cargo"
      ],
      "commitMessageAction": "⬆️  Update",
      "commitMessageTopic": "{{depName}}"
    },
    {
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "commitMessageAction": "⬆️  micro: Update",
      "automerge": true,
      "rebaseWhen": "conflicted"
    }
  ]
}
